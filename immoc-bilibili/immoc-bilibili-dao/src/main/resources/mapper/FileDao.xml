<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.immoc.bilibili.dao.FileDao">

    <select id="getFileByMD5" parameterType="java.lang.String" resultType="com.immoc.bilibili.domain.File">
        select
            *
        from
            t_file
        where
            md5 = #{fileMd5}
    </select>

    <insert id="addFile" parameterType="com.immoc.bilibili.domain.File">
        insert into
            t_file(
                url,
                `type`,
                md5,
                createTime
            )value(
                #{url},
                #{type},
                #{md5},
                #{createTime}
            )
    </insert>
</mapper>